<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/clicked_video_layout"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingTop="8dp"
  android:clickable="true"
  android:focusable="true">

  <android.support.v7.widget.AppCompatCheckBox
    android:id="@+id/checked_video"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true" />


  <ImageView
    android:id="@+id/upload_check"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:contentDescription="@string/upload"
    android:layout_centerVertical="true"
    app:srcCompat="@drawable/ic_check_circle_outline" />

  <ProgressBar
    android:id="@+id/upload_spinner"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:layout_marginRight="4dp"
    android:layout_toLeftOf="@id/upload_check"
    android:layout_toStartOf="@id/upload_check"
    android:visibility="gone" />

  <TextView
    android:id="@+id/video_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    android:layout_centerVertical="true"
    android:layout_toEndOf="@id/checked_video"
    android:layout_toLeftOf="@id/upload_spinner"
    android:layout_toRightOf="@id/checked_video"
    android:layout_toStartOf="@id/upload_spinner"
    android:ellipsize="end"
    android:maxLines="1" />

</RelativeLayout>