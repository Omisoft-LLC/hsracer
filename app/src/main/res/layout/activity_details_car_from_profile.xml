<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">


  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
      android:id="@+id/car_details_panel1"
      android:layout_width="match_parent"
      android:layout_height="250dp"
      android:background="@drawable/drawer_background">

      <TextView
        android:id="@+id/details_car_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:layout_marginLeft="16dp"
        android:layout_alignParentBottom="true"
        android:ellipsize="end"
        android:ems="11"
        android:fontFamily="sans-serif-condensed"
        android:maxLines="1"
        android:textColor="@color/colorWhite"
        android:textSize="22sp"
        android:transitionName="@string/transition_car_name"
        tools:targetApi="lollipop" />

      <TextView
        android:id="@+id/details_car_make_and_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="16dp"
        android:layout_alignParentBottom="true"
        android:ellipsize="end"
        android:fontFamily="sans-serif-condensed"
        android:maxLines="1"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:transitionName="@string/transition_make_and_model"
        tools:targetApi="lollipop" />


    </RelativeLayout>


    <android.support.v7.widget.Toolbar
      android:id="@+id/car_details_toolbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/colorTransparent"
      android:minHeight="?attr/actionBarSize" />


    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="8dp"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      android:layout_below="@+id/car_details_panel1"
      android:orientation="vertical">

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_horizontal"
        android:text="@string/details"
        android:textColor="@color/colorBlack"
        android:textSize="18sp" />


      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/details_car_year_label" />

      <TextView
        android:id="@+id/car_details_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/colorBlack"
        android:textSize="18sp" />
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/details_car_engine_cylinders_label" />

      <TextView
        android:id="@+id/car_details_engine_cylinders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/colorBlack"
        android:textSize="18sp" />
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/car_engine_volume" />

      <TextView
        android:id="@+id/car_details_engine_volume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/colorBlack"
        android:textSize="18sp" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/car_bhp" />

      <TextView
        android:id="@+id/car_details_bhp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/colorBlack"
        android:textSize="18sp" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/details_car_fuel_label" />

      <TextView
        android:id="@+id/car_details_fuel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/colorBlack"
        android:textSize="18sp" />

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_horizontal"
        android:text="@string/statistics"
        android:textColor="@color/colorBlack"
        android:textSize="18sp" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/finishing_places"
        android:layout_marginBottom="18dp" />

      <WebView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ww_pie_chart"
        android:layout_gravity="center_horizontal">

      </WebView>
    </LinearLayout>
  </RelativeLayout>
</ScrollView>