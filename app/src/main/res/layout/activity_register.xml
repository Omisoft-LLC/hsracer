<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/register_activity_scroll_view"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="16dp"
      android:background="@xml/background"
      android:orientation="vertical">

      <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/style_for_textInputLayouts_in_register">

        <EditText
          android:id="@+id/nickname"
          style="@style/editTextViewsRegisterAndLogin"
          android:hint="@string/nickname"
          android:inputType="textNoSuggestions" />

      </android.support.design.widget.TextInputLayout>


      <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/style_for_textInputLayouts_in_register">

        <EditText
          android:id="@+id/first_name"
          style="@style/editTextViewsRegisterAndLogin"
          android:hint="@string/first_name_text_view_string"
          android:inputType="textNoSuggestions" />

      </android.support.design.widget.TextInputLayout>


      <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/style_for_textInputLayouts_in_register">

        <EditText
          android:id="@+id/last_name"
          style="@style/editTextViewsRegisterAndLogin"
          android:hint="@string/last_name_text_view_string"
          android:inputType="textNoSuggestions" />

      </android.support.design.widget.TextInputLayout>


      <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/style_for_textInputLayouts_in_register">

        <EditText
          android:id="@+id/email_register"
          style="@style/editTextViewsRegisterAndLogin"
          android:hint="@string/email"
          android:inputType="textEmailAddress" />

      </android.support.design.widget.TextInputLayout>


      <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/style_for_textInputLayouts_in_register">

        <EditText
          android:id="@+id/password_register"
          style="@style/editTextViewsRegisterAndLogin"
          android:hint="@string/password"
          android:inputType="textPassword" />

      </android.support.design.widget.TextInputLayout>

      <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/style_for_textInputLayouts_in_register">

        <EditText
          android:id="@+id/repeat_password_register"
          style="@style/editTextViewsRegisterAndLogin"
          android:hint="@string/repeat_password"
          android:inputType="textPassword" />

      </android.support.design.widget.TextInputLayout>

      <Button
        android:id="@+id/register"
        style="@style/normalButton"
        android:layout_width="match_parent"
        android:onClick="registerOnClickListener"
        android:text="@string/sign_up" />
    </LinearLayout>

  </ScrollView>
  <include layout="@layout/include_progress_overlay" />
</RelativeLayout>