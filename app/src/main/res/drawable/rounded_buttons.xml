<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_pressed="true">
    <layer-list>
      <item android:left="5dp" android:top="5dp">
        <shape>
          <corners android:radius="5dp" />
          <solid android:color="@color/colorButtonShadowPressed" />
        </shape>
      </item>
      <item android:bottom="3dp" android:right="2dp">
        <shape>
          <gradient android:angle="180" android:endColor="@color/colorButtonPressed" android:startColor="@color/colorButtonPressed" />
          <corners android:radius="4dp" />
        </shape>
      </item>
    </layer-list>
  </item>


  <item>
    <layer-list>
      <item android:left="5dp" android:top="5dp">
        <shape>
          <corners android:radius="5dp" />
          <solid android:color="@color/colorButtonShadowPressed" />
        </shape>
      </item>
      <item android:bottom="3dp" android:right="2dp">
        <shape>
          <gradient android:angle="180" android:endColor="@color/colorButtonReleased" android:startColor="@color/colorButtonReleased" />
          <corners android:radius="4dp" />
        </shape>
      </item>
    </layer-list>
  </item>
</selector>